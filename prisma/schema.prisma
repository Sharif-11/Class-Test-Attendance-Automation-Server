// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  student
  teacher
}

model Student {
  studentId          String               @id 
  name               String
  email              String               @unique
  batch              String
  session            String
  department         String
  role               Role
  password           String
  profileImage       String
  createdAt          DateTime             @default(now())
  updatedAt          DateTime             @updatedAt
  Mark               Mark[]
  Student_Attendance Student_Attendance[]

  @@map("Students")
}

model Teacher {
  teacherId        String             @id
  name             String
  email            String             @unique
  department       String
  designation      String
  specialization   String?
  role             Role
  password         String
  profileImage     String
  deptHead         Boolean            @default(false)
  createdAt        DateTime           @default(now())
  updatedAt        DateTime           @updatedAt
  Semester_Courses Semester_Courses[]

  @@map("Teachers")
}

model Course {
  courseCode  String @id
  courseTitle String
  credit      Float

  Semester_Courses Semester_Courses[]
  createdAt        DateTime           @default(now())
  updatedAt        DateTime           @updatedAt
  Class_Test       Class_Test[]
  Attendance       Attendance[]
  Mark             Mark[]

  @@map("Courses")
}

model Semester {
  semesterTitle    String
  batch            String
  semesterId       String             @id
  session          String
  Semester_Courses Semester_Courses[]
  createdAt        DateTime           @default(now())
  updatedAt        DateTime           @updatedAt
  Class_Test       Class_Test[]
  Attendance       Attendance[]
  Mark             Mark[]

  @@map("Semesters")
}

model Semester_Courses {
  semesterId String
  courseCode String
  teacherId  String
  semester   Semester @relation(fields: [semesterId], references: [semesterId])
  course     Course   @relation(fields: [courseCode], references: [courseCode])
  teacher    Teacher  @relation(fields: [teacherId], references: [teacherId])

  @@id([semesterId, courseCode, teacherId])
  @@map("Semester_courses")
}

model Class_Test {
  semesterId  String
  courseCode  String
  classTestId String   @unique @default(uuid())
  full_mark   Float
  evaluated   Boolean  @default(false)
  semester    Semester @relation(fields: [semesterId], references: [semesterId])
  course      Course   @relation(fields: [courseCode], references: [courseCode])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  Mark        Mark[]

  @@id([semesterId, courseCode, classTestId])
  @@map("Class_tests")
}

model Mark {
  classTestId String
  semesterId  String
  courseCode  String
  studentId   String
  marks       Float
  classTest   Class_Test @relation(fields: [classTestId], references: [classTestId])
  student     Student    @relation(fields: [studentId], references: [studentId])
  semester    Semester   @relation(fields: [semesterId], references: [semesterId])
  course      Course     @relation(fields: [courseCode], references: [courseCode])
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  @@id([semesterId, courseCode, studentId, classTestId])
  @@map("Marks")
}

model Attendance {
  attendanceId       String               @unique @default(uuid())
  semesterId         String
  courseCode         String
  date               DateTime             @default(now())
  semester           Semester             @relation(fields: [semesterId], references: [semesterId])
  course             Course               @relation(fields: [courseCode], references: [courseCode])
  createdAt          DateTime             @default(now())
  updatedAt          DateTime             @updatedAt
  Student_Attendance Student_Attendance[]

  @@id([semesterId, courseCode, date])
  @@map("Attendances")
}

model Student_Attendance {
  attendanceId String
  studentId    String
  present      Boolean
  attendance   Attendance @relation(fields: [attendanceId], references: [attendanceId])
  student      Student    @relation(fields: [studentId], references: [studentId])

  @@id([attendanceId, studentId])
  @@map("Student_attendances")
}
